<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="review"
            type="com.example.fufu.data.model.Review" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/j_btn_card"
        android:layout_marginVertical="2dp"
        android:orientation="horizontal"
        android:padding="4dp"
        >
        <ImageButton
            android:id="@+id/review_user_avt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/anhbia01"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/review_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@{review.userFullName}"
                    android:textSize="@dimen/textSize"
                    android:textColor="@color/text_color_1"
                    android:textStyle="bold"
                    tools:text="Anh John"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{review.createdAt}"
                    android:textSize="@dimen/textDetail"
                    android:textColor="@color/text_color_2"
                    tools:text="11/09/2022"
                    />
            </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-74dp"
                android:layout_marginTop="-18dp"
                android:progressBackgroundTintMode="multiply"
                android:progressTint="@color/yellow_600"
                android:numStars="5"
                android:rating="@{review.revPoint}"
                android:scaleY="0.4"
                android:scaleX="0.4"
                android:stepSize="1"
                android:isIndicator="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{review.revComment}"
                android:textColor="@color/text_color_1"
                android:layout_marginTop="-21dp"
                android:textSize="@dimen/textSize"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_delete_review"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete_outline"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:tint="@color/text_color_2" />
    </LinearLayout>
</layout>
